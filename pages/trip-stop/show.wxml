<!--pages/trip-stop/show.wxml-->

<view >

  <view class="map">
    <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}" 
    scale="14" 
    controls="{{controls}}" 
    bindcontroltap="controltap" 
    markers="{{markers}}" 
    bindmarkertap="markertap" 
    polyline="{{polyline}}" 
    circles="{{circles}}" 
    bindregionchange="regionchange" 
    show-location style="width:100% ; height: 400px;">
  </map>
    <!-- <image src="/images/map-demo.jpg" style="height:100%; width:100%;"></image> -->
  </view>

  
  <swiper previous-margin="30rpx" next-margin="30rpx" style="width: 100%">
    <swiper-item wx:for="{{3}}" wx:key="index" >
      <view class="card-stop" bindtap="goToStopDetail" data-id="{{stop.id}}">
        <image src="https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixid=MnwxMjA3fDB8MHxzZWFyY2h8N3x8Y2FmZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60"/>
        <view class="card-stop-infos">
          <view class="h2">Shanghai Natural History Museum for adults and kids{{stop.name}}</view>
          <view class="p thin">Visit time: 30 min {{stop.visit_time}}</view>
        </view>
      </view>
    </swiper-item>
  </swiper> 
</view>