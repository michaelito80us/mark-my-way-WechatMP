<!--pages/trip-stop/show.wxml-->

<view >

  <view class="map">
    <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}" 
    scale="14" 
    markers="{{markers}}" 
    style="width:100% ; height: 400px;"></map>
  </view>

  <swiper previous-margin="30rpx" style="width: 100%; height: 350rpx;" class="stop-swiper">
  <swiper-item wx:for="{{stops}}" wx:key="index" style="height: 100%;">
    <view class="card-stop" bindtap="goToStopDetail" data-id="{{item.id}}">
      <view class="card-content">
        <image src="{{item.photos[0]}}" class="card-img"/>
        <view class="card-stop-infos">
          <view class="h2">{{item.name}}</view>
          <view class="p thin">Visit time: {{item.visit_time}} min</view>
        </view>
      </view>
    </view>
  </swiper-item>
  </swiper> 
</view>