.trip-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

/* .map {
  height: 60%;
} */

.map-plan-trip {
  width:100%; 
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}


.button {
  border-radius: 50px;
  background-color: #0044e0;
  color: white;
  /* margin-bottom: 80rpx; */
  padding-left: 0;
  padding-right: 0;
  box-sizing: 0;
}

.title {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
  font-size: 40rpx;
  font-weight: bold;
}

.list {
  /* height: 100%; */
  width: 100%;
  /* padding-bottom: 180rpx; */
}
.section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.mins{
  flex-shrink: 0;
}

.name{
  width: 80%;
}

.map-footer {
  width: 100%;
  padding: 0 40rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}

.walk-btn {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #0044e0;
}

.walk-btn image {
  width: 100%;
  height: 100%;
}

.toggler {
  display: flex;
  align-items: center;
  background-color: white;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  width: 120rpx;
  height: 50rpx;
  border-radius: 9999rpx;
  padding: 20rpx 30rpx;
}

.toggler image {
  width: 100%;
  height: 100%;
}

.nav-btn {
  position: absolute;
  right: 40rpx;
  font-weight: bold;
  color: #0044e0;
}