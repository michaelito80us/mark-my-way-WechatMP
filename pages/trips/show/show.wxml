<view class="container">

  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" circles="{{circles}}" bindregionchange="regionchange" show-location style="width:100% ; height: 400px;"></map>

  <view class="list">
    <view class="title">
      <view class="trip">My trip</view>
    </view>
        <view class="card">
          <!-- wx:for="{{stops}}" wx:for-item="stop" data-id="{{stop.id}} -->
            <view class="section">
              <view class="name">Majestic Theater</view>
              <view class="mins">30 mins</view>
            </view>
            <view class="section">
              <view class="name">WestGate Mall</view>
              <view class="mins">20 mins</view>
            </view>
            <view class="section">
              <view class="name">Shanghai Natural History Museum for adults and kids</view>
              <view class="mins">40 mins</view>
            </view>
          </view>
        </view>
    

    <button class="button thin" type="submit" bindtap="go">Let's go</button>
 
</view>
