<!--pages/create/create.wxml-->

<view class="container">

  <!-- <view class="map">
    <image src="/images/map-demo.jpg" style="height:100%"></image>
  </view> -->

  <map 
  id="map" 
  subkey="XIGBZ-ZCP6F-NINJP-JYWMZ-5EBR5-NYBBD" 
  class="map-plan-trip" 
  longitude="{{longitude}}" 
  latitude="{{latitude}}" 
  scale="14" 
  bindregionchange="regionChange" 
  show-location>
    <cover-image class="map-pin" src="/images/pin.png"></cover-image>

    <cover-image class="map-cur" src="/images/location-cur.png" bindtap="getLocation"></cover-image>
  </map>

  <view>
    <form bindsubmit="">
      <view class="start-section">
        <view class="start_point bold">Start Point</view>
        <input name="current_point" placeholder="your location" value="{{addressDetails}}" placeholder-class="roboto" />
      </view>

      <view class="duration-section">
        <view class="bold">Duration</view>

        <picker-view class="picker-container" bindchange="changePicker" indicator-style="height: 30px; width: 100px; line-height: 30px; ">
          <picker-view-column>
            <view class="picker-item" wx:for="{{hours}}">{{item}}</view>
          </picker-view-column>
          <picker-view-column>
            <view class="picker-item" wx:for="{{minutes}}">{{item}}</view>
          </picker-view-column>
        </picker-view>

      </view>
    </form>
  </view>

  <button class="button" type="submit" bindtap="goToTripStopList">PLAN</button>
</view>