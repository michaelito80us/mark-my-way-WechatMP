<!--pages/create/create.wxml-->

<view class="container">

  <!-- <view class="map">
    <image src="/images/map-demo.jpg" style="height:100%"></image>
  </view> -->

  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" circles="{{circles}}" bindregionchange="regionchange" show-location style="width:100% ; height: 400px;"></map>

  <view>
    <form bindsubmit="">
      <view class="section thin">
        <view class="start_point">Start Point</view>
        <input name="current_point" placeholder="your location" placeholder-class="roboto" />
      </view>

      <view class="section thin">
        <view class="thin">Duration</view>
        <picker mode="time" class="weui-input" name="Time" bindchange="changeTime" >
          {{selectedTime||'Pick a Time (hour/min)'}}
        </picker>
      </view>
    </form>
  </view>

  <button class="button thin" type="submit" bindtap="goToTripStopList">PLAN</button>
</view>